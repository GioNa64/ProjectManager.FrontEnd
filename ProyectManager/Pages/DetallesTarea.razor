@page "/detallesTarea/{id:int}"

@using ProyectManager.Models
@using ProyectManager.Services
@inject ITareaService TareaService

<MudText Typo="Typo.h5">Detalles de Tarea</MudText>

@if (tarea == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <MudCard>
        <MudCardHeader Class="blue lighten-2">
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@tarea.Nombre</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body2">@tarea.Descripcion</MudText>
        </MudCardContent>
        <MudCardContent>
            <MudText Typo="Typo.body2">@tarea.IdColaborador</MudText>
        </MudCardContent>
        <MudCardContent>
            <MudText Typo="Typo.body2">@tarea.Prioridad</MudText>
        </MudCardContent>
        <MudCardContent>
            <MudText Typo="Typo.body2">@tarea.Esfuerzo</MudText>
        </MudCardContent>
        <MudCardContent>
            <MudText Typo="Typo.body2">@tarea.Estado</MudText>
        </MudCardContent>
    </MudCard>
}

@code {
    [Parameter]
    public int id { get; set; }

    Tarea tarea = new Tarea();

    protected override async Task OnInitializedAsync()
    {
        if (id > 0)
            tarea = await TareaService.GetById(id);
    }
}
