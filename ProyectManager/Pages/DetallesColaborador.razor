@page "/detallescolaborador/{id:int}"

@using ProyectManager.Models
@using ProyectManager.Services
@inject IColaboradorService ColaboradorService

<MudText Typo="Typo.h5">Detalles de Colaborador</MudText>

@if (colaborador == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <MudCard>
        <MudCardHeader Class="blue lighten-2">
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@colaborador.IdProyecto</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body2">@colaborador.IdUsuario</MudText>
        </MudCardContent>
    </MudCard>
}

@code {
    [Parameter]
    public int id { get; set; }

    Colaborador colaborador = new Colaborador();

    protected override async Task OnInitializedAsync()
    {
        if (id > 0)
            colaborador = await ColaboradorService.GetById(id);
    }

    
}